<div class="container">

<h2>Books available</h2>

<table border="1" class="table">
<tr>
	<th>Title</th>
	<th>Code</th>
	<th>Price</th>
	<th>Publisher</th>
	<th>Description</th>
	<th>Copies</th>
	<th>Book page</th>
</tr>

<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.book_id%></td>
<td><%= book.price%></td>
<td><%= book.publisher%></td>
<td><%= book.description%></td>
<td><%= book.number %></td>
<td><%= link_to 'Book Page', book_path(book) %></td>
</tr>
<% end %>
</table>
</div>
