<!DOCTYPE html>
<html>
  <head>
    <title>BookstoreApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">

   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">

      <h5 class="my-0 mr-md-auto font-weight-normal"> Sheffield Bookstore </h5>

      <nav class="my-2 my-md-0 mr-md-3">

        <%=link_to "Home", '#'%>
        <!--<a class="p-2 text-dark" href="<%=link_to "Home", '#'%>"> Home</a>-->
        <%=link_to "About Us", '#'%>
        <!--<a class="p-2 text-dark" href="<%=link_to "About Us", '#'%>"> About</a>-->
        <%=link_to "Contact Us", '#'%>
        <!--<a class="p-2 text-dark" href="<%=link_to "Contact Us", '#'%>">Contact</a>-->

       
      </nav>

      
      </div>

        <%= link_to 'Create account', new_user_path %> |
        <%= link_to 'Add new book', new_book_path %> |
        <%= link_to 'Add new novel', new_novel_path %> |
        <%= link_to 'List all novels', novels_path %> |
        <%= link_to 'Add new publisher', new_publisher_path %> |
        <%= link_to 'Add new author', new_author_path %> |
        <%= link_to 'Add new genre', new_genre_path %> |

        <br>
        <% if current_user %>
              <a class="p-2 text-dark" href="#">
                <%= link_to 'Log out', session_path('active'), method: :delete %>
              </a>
              <a class="p-2 text-dark" href="#">
                <%= current_user.userid %>
              </a>
          <% else %>
              <a class="p-2 text-dark" href="#">
                <%= link_to 'Log in', new_session_path, class: "active_nav_link" %>
              </a>
        <% end %>

      <% if alert %><%= alert %><% end %>
      <% if notice %><%= notice %><% end %>

      <%= yield %>
  </div>

  </body>
</html>
